---
import * as CONFIG from '../../config.ts';
import SkipToContent from './SkipToContent.astro';
import SidebarToggle from './SidebarToggle.tsx';

const { currentPage } = Astro.props;
---

<header>
	<SkipToContent />
	<nav class="nav-wrapper" title="Top Navigation">
		<div class="menu-toggle">
			<SidebarToggle client:idle />
		</div>
		<div class="logo flex">
			<a href="/">
				<h1>üåê{CONFIG.SITE.title ?? "Documentation"}</h1>
			</a>
		</div>
		<div class="nav-links">
			<div class="nav-item">
			<a href="/about/introduction">About</a>
			</div>

			<div class="nav-item">
			<a href="/overview/introduction">Overview & Information</a>
			</div>

			<div class="nav-item">
			<a href="/technology/introduction">Technology & Tools</a>
			</div>

			<div class="nav-item">
			<a href="/design/introduction">Design & Layout</a>
			</div>

			<div class="nav-item">
			<a href="/content/introduction">Content & Activiteis</a>
			</div>

			<div class="nav-item">
			<a href="/interaction/introduction">Interaction</a>
			</div>
			
			<div class="nav-item">
			<a href="/assessment/introduction">Assessment & Feedback</a>
			</div>

			<div class="nav-item">
			<a href="/rsi/introduction">Regular & Substantive Feedback</a>
			</div>
		
		</div>
	</nav>
</header>

<style>
	header {
		z-index: 11;
		height: var(--theme-navbar-height);
		width: 100%;
		background-color: var(--theme-navbar-bg);
		display: flex;
		align-items: center;
		justify-content: flex-start;
		overflow: hidden;
		position: sticky;
		top: 0;
	}

	.logo {
		display: flex;
		overflow: hidden;
		/* width: 30px; */
		font-size: 2rem;
		font-weight: 600;
		line-height: 1.5;
		color: hsla(var(--color-base-white), 100%, 1);
		gap: 0.25em;
	}

	.logo a {
		padding: 0.5em 0.25em;
		margin: -0.5em -0.25em;
		text-decoration: none;
		font-weight: bold;
	}

	.logo a {
		transition: color 100ms ease-out;
		color: var(--theme-text);
	}

	.logo a:hover,
	.logo a:focus {
		color: var(--theme-text-accent);
	}

	.logo h1 {
		font: inherit;
		color: inherit;
		margin: 0;
	}

	.nav-wrapper {
		display: flex;
		align-items: center;
		justify-content: flex-start;
		gap: 2em;
		width: 100%;
		padding: 0 1rem;
	}

	.nav-links {
		display:none;
		gap: 1rem;
	}
	.nav-links a {
		text-decoration: none;
		font-size: 1.1rem;
		color: hsl(345, 71%, 34%);
	}
	.nav-links a {
		/* content: ''; */
		border-bottom: 1px solid #111;
	}

	.nav-links a:hover {
		color:#000;
	}

	@media (min-width: 50em) {
		header {
			position: static;
			padding: 2rem 0rem;
		}
		.logo {
			width: auto;
			margin: 0;
			z-index: 0;
		}
		.menu-toggle {
			display: none;
		}
		.logo {
			width: auto;
		}
		.nav-links {
			display:flex;
		}
		.nav-wrapper {
			justify-content: center;
		}
	}



</style>
